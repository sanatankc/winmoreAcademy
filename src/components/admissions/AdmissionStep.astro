---
import Text from "../system/Text.astro";

const { title, titleBG, thumbnailBG, step } = Astro.props;
---

<div 
  class='w-[90%] mt-[44px] max-md:mt-[22px] rounded-xl overflow-hidden flex flex-row max-md:flex-col' 
  style={{
    background: '#FAFAFA',
    border: '3px solid #E6E6E6'
}}>
  <div 
    class='w-[233px] h-full bg-slate-500 max-md:h-[200px] max-md:w-full flex justify-center items-center flex-col'
    style={{
      background: thumbnailBG,
      backgroundSize: 'cover',
      backgroundPosition: 'center'
    }}
  >
    <Text type={'subtitle'}>Step</Text>
    <div class='font-display text-transparent text-8xl' style={{
      // textShadow: '0 0 2px #fff',
      '-webkit-text-stroke': '2.4px #fff'
    }}>{step}</div>
  </div>
  <div class='flex-1 h-full p-7'>
    <div class='flex flex-row'>
      <div 
        class='w-2 h-7 mr-2 mb-4 max-md:hidden'
        style={{
          background: titleBG,
          boxShadow: '0px 10px 20px rgba(0, 0, 0, 0.2)'
        }}
      >
      </div>
      <Text class='text-black max-md:mb-4' type={'h4'}>{title}</Text>
    </div>
    <slot />
    
    
  </div>
</div>